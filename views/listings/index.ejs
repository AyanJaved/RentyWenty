<% layout("/layouts/boilerplate") %>
<div class="container">
  
<div id="filters">
  <a href="/listings" class="filter <%= !category ? 'active' : '' %>">
    <div><i class="fa-solid fa-th"></i></div>
    <p>All</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Trending"
    class="filter <%= category === 'Trending' ? 'active' : '' %>">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Budget Stays"
    class="filter <%= category === 'Budget Stays' ? 'active' : '' %>">
    <div><i class="fa-solid fa-wallet"></i></div>
    <p>Budget Stays</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Luxury"
    class="filter <%= category === 'Luxury' ? 'active' : '' %>">
    <div><i class="fa-solid fa-gem"></i></div>
    <p>Luxury</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Rooms"
    class="filter <%= category === 'Rooms' ? 'active' : '' %>">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Apartments"
    class="filter <%= category === 'Apartments' ? 'active' : '' %>">
    <div><i class="fa-solid fa-house-chimney"></i></div>
    <p>Apartments</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Family"
    class="filter <%= category === 'Family' ? 'active' : '' %>">
    <div><i class="fa-solid fa-people-roof"></i></div>
    <p>Family</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Pet Friendly"
    class="filter <%= category === 'Pet Friendly' ? 'active' : '' %>">
    <div><i class="fa-solid fa-paw"></i></div>
    <p>Pet Friendly</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Tourist Spots"
    class="filter <%= category === 'Tourist Spots' ? 'active' : '' %>">
    <div><i class="fa-solid fa-landmark"></i></div>
    <p>Tourist Spots</p>
  </a>

  <a href="/listings?search=<%= search || '' %>&category=Monthly Stays"
    class="filter <%= category === 'Monthly Stays' ? 'active' : '' %>">
    <div><i class="fa-solid fa-calendar-days"></i></div>
    <p>Monthly Stays</p>
  </a>
</div>

<!-- Listings Grid -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% if (listings.length===0) { %>
    <div class="col-12">
      <div class="empty-state">
        <i class="fas fa-search empty-state-icon"></i>
        <h3 class="empty-state-title">No listings found</h3>
        <p class="empty-state-text">
          <% if (search) { %>
            We couldn't find any properties matching "<%= search %>".
              Try searching with different keywords.
              <% } else if (category) { %>
                No properties available in the "<%= category %>" category yet.
                  Check back soon or browse other categories.
                  <% } else { %>
                    Be the first to list a property on RentyWenty!
                    <% } %>
        </p>
        <% if (currUser) { %>
          <a href="/listings/new" class="btn btn-theme">
            <i class="fas fa-plus"></i> Create Listing
          </a>
          <% } else { %>
            <a href="/listings" class="btn btn-theme">
              <i class="fas fa-home"></i> View All Listings
            </a>
            <% } %>
      </div>
    </div>
    <% } %>

      <% for (let listing of listings) { %>
        <div class="col">
          <a class="listing-link" href="/listings/<%= listing.id %>">
            <div class="card listing-card">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" />
              <div class="card-img-overlay"></div>

              <div class="card-body">
                <h5 class="card-title">
                  <%= listing.title %>
                </h5>

                <div class="price-section">
                  <!-- Only Monthly Price -->
                  <div class="price-monthly">
                    <div class="price-amount">
                      <span>â‚¹<%= Math.round(listing.price * 30).toLocaleString("en-IN") %></span>
                      <span class="price-period">/month</span>
                    </div>
                    <span class="tax-info">+18% GST</span>
                  </div>
                </div>
              </div>
            </div>
          </a>
        </div>
        <% } %>
</div>
</div>