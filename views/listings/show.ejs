<% layout("/layouts/boilerplate") %>
  <div class="show-container">
    <!-- Listing Header -->
    <div class="listing-header">
      <h2>
        <%= listing.title %>
      </h2>
      <div class="owner-badge">
        <i class="fas fa-user"></i> Owned by <%= listing.owner.username %>
      </div>
    </div>

    <!-- Main Listing Card -->
    <div class="listing-main-card">
      <img src="<%= listing.image.url %>" class="listing-image" alt="<%= listing.title %>">

      <div class="listing-details">
        <!-- Description -->
        <div class="mb-4">
          <h5 style="color: var(--primary-dark); font-weight: 600;">
            <i class="fas fa-align-left"></i> Description
          </h5>
          <p style="line-height: 1.8; color: var(--text);">
            <%= listing.description %>
          </p>
        </div>

        <!-- Price Highlight -->
        <div class="price-highlight">
          <div style="font-size: 0.9rem; color: var(--text-muted); margin-bottom: 0.5rem;">
            <i class="fas fa-tag"></i> Pricing Details
          </div>
        
          <div class="pricing-table">
            <div class="pricing-row">
              <span class="pricing-label">
                <i class="fas fa-moon"></i> Per Night
              </span>
              <span class="pricing-value">
                ₹<%= Math.round(listing.price).toLocaleString("en-IN") %>
              </span>
            </div>
        
            <div class="pricing-row">
              <span class="pricing-label">
                <i class="fas fa-calendar-week"></i> Per Week
              </span>
              <span class="pricing-value">
                ₹<%= Math.round(listing.price * 7).toLocaleString("en-IN") %>
              </span>
            </div>
        
            <div class="pricing-row primary-price">
              <span class="pricing-label">
                <i class="fas fa-calendar-alt"></i> Per Month
              </span>
              <span class="pricing-value highlight">
                ₹<%= Math.round(listing.price * 30).toLocaleString("en-IN") %>
              </span>
            </div>
          </div>
        
          <div class="pricing-note">
            <i class="fas fa-info-circle"></i>
            <small>All prices are approximate. <span style="color: #e53e3e;">+18% GST applicable</span></small>
          </div>
        </div>

        <!-- Location Details -->
        <div class="detail-item">
          <i class="fas fa-map-marker-alt"></i>
          <div>
            <strong>Location:</strong>
            <span>
              <%= listing.location %>
            </span>
          </div>
        </div>

        <div class="detail-item">
          <i class="fas fa-globe"></i>
          <div>
            <strong>Country:</strong>
            <span>
              <%= listing.country %>
            </span>
          </div>
        </div>

        <!-- Categories (if available) -->
        <% if (listing.category?.length > 0) { %>
          <div class="detail-item">
            <i class="fas fa-tags"></i>
            <div>
              <strong>Categories:</strong>
              <div class="mt-1">
                <% listing.category.forEach((cat)=> { %>
                  <span class="badge" style="background-color: var(--primary); margin-right: 0.5rem;">
                    <%= cat %>
                  </span>
                  <% }); %>
              </div>
            </div>
          </div>
          <% } %>
      </div>
    </div>

    <!-- Owner Actions -->
    <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="action-buttons">
        <a href="/listings/<%= listing.id %>/edit" class="btn btn-theme">
          <i class="fas fa-edit"></i> Edit Listing
        </a>
        <form action="/listings/<%= listing.id %>?_method=DELETE" method="POST" class="d-inline">
          <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this listing?')">
            <i class="fas fa-trash-alt"></i> Delete Listing
          </button>
        </form>
      </div>
      <% } %>

        <hr class="section-divider">

        <!-- Review Section -->
        <div class="review-section">
          <% if (currUser) { %>
            <h4><i class="fas fa-star"></i> Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
              <div class="mb-3">
                <label for="rating" class="form-label">
                  <i class="fas fa-star-half-alt"></i> Rating <span class="text-danger">*</span>
                </label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                  </div>
                  
                  <div class="mb-3">
                    <label for="comment" class="form-label">
                      <i class="fas fa-comment"></i> Comment <span class="text-danger">*</span>
                    </label>
                    <textarea name="review[comment]" id="comment" rows="5" class="form-control" placeholder="Share your experience..."
                      maxlength="500" required></textarea>
                    <small class="text-muted">Maximum 500 characters</small>
                    <div class="invalid-feedback">Please submit some comments for review</div>
                  </div>
                  
                  <button type="submit" class="btn btn-theme">
                    <i class="fas fa-paper-plane"></i> Submit Review
                  </button>
                  </form>
                  
                  <hr class="my-4">
                  <% } %>
                  
                    <!-- All Reviews -->
                    <% if (listing.reviews.length> 0) { %>
                      <h4><i class="fas fa-comments"></i> All Reviews (<%= listing.reviews.length %>)</h4>
                  
                      <div class="reviews-grid">
                        <% for (review of listing.reviews) { %>
                          <div class="review-card">
                            <div class="review-header">
                              <div class="review-author">
                                <i class="fas fa-user-circle"></i> @<%= review.author.username %>
                              </div>
                              <p class="starability-result mb-0" data-rating="<%= review.rating %>"></p>
                            </div>
                  
                            <p class="review-comment">
                              <%= review.comment %>
                            </p>
                  
                            <% if (currUser && review.author._id.equals(currUser._id)) { %>
                              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                class="mt-3">
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Delete this review?')">
                                  <i class="fas fa-trash-alt"></i> Delete
                                </button>
                              </form>
                              <% } %>
                          </div>
                          <% } %>
                      </div>
                      <% } else { %>
                        <div class="text-center py-5" style="color: var(--text-muted);">
                          <i class="fas fa-comment-slash fa-3x mb-3"></i>
                          <p>No reviews yet. Be the first to review!</p>
                        </div>
                        <% } %>
                          </div>
                          </div>